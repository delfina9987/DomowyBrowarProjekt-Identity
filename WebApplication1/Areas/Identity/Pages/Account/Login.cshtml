@page
@model LoginModel

@{
    ViewData["Title"] = "Zaloguj się";
}

<h1>@ViewData["Title"]</h1>

<body class="text-light">
    <main class="form-signin w-100 m-auto">
        
        <div class="row">
            <div class="col-md-4">
                <section>
                    <form id="account" method="post">
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label">Hasło</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Zaloguj się</button>
                        </div>

                    </form>
                </section>
            </div>
        </div>
        
    </main>
</body>

<head> 
    <link rel="stylesheet" href="~/css/customer.css" asp-append-version="true"/>
</head>
<body>
  <footer class="mastfoot mt-auto"></footer>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
