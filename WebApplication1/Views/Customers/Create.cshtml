@model WebApplication1.Models.Customers

@{
    ViewData["Title"] = "Formularz zamówienia";
}

<body>
   <header class="masthead mb-auto"></header>
   <main role="main">
      <div class="album py-5 bg-light">
         <div class="container">

             <h4>Złóż zamówienie i zarezerwuj zestaw!</h4>
             <hr />

            <div class="row">
               <div class="col-md-4">
                  <form asp-action="Create">
                     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                     <div class="form-group">
                        <label asp-for="CustomerName" class="control-label">Podaj swoje imię:</label>
                        <input asp-for="CustomerName" class="form-control" id="CustomerName" size="20" minlength="2" placeholder="Imię" autofocus/>
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                     </div>
                     <div class="form-group">
                        <label asp-for="CustomerSurname" class="control-label">Podaj swoje nazwisko:</label>
                        <input asp-for="CustomerSurname" class="form-control" id="CustomerSurname" size="30" minlength="2" placeholder="Nazwisko"/>
                        <span asp-validation-for="CustomerSurname" class="text-danger"></span>
                     </div>
                     <div class="form-group">
                        <label asp-for="CustomerEmail" class="control-label">Podaj swój adres e-mail:</label>
                        <input asp-for="CustomerEmail" class="form-control" type="email" id="CustomerEmail" size="100" placeholder="jan.kowalski@domena.pl"/>
                        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                     </div>
                     <div class="form-group">
                        <label asp-for="CustomerPhoneNr" class="control-label">Podaj swój numer telefonu:</label>
                        <div class="input-group has-validation">
                           <span class="input-group-text">+48</span>
                           <input asp-for="CustomerPhoneNr" class="form-control" type="tel" id="CustomerPhoneNr" size="9" pattern="\d{9}" placeholder="601102203"/>
                        </div>
                        <span asp-validation-for="CustomerPhoneNr" class="text-danger"></span>
                     </div>
                     <div class="form-group">
                        <label asp-for="CustomerService" class="control-label">Wybierz, który zestaw piw chciałbyś zarezerwować:</label>
                        <select asp-for="CustomerService" class="form-control">
                           <option value="" selected="" disabled="disabled">Wybierz zestaw!</option>
                           <option>Zestaw_1</option>
                           <option>Zestaw_2</option>
                           <option>Zestaw_3</option>
                           <option>Zestaw_4</option>
                        </select>
                        <span asp-validation-for="CustomerService" class="text-danger"></span>
                     </div>
                     <div class="form-group">
                        <input asp-for="CustomerStatus" type="hidden" class="form-control" id="CustomerStatus" value="Niezaakceptowany"/>
                        <span asp-validation-for="CustomerStatus" class="text-danger"></span>
                     </div>
                     <div class="form-group">
                        <input type="submit" value="Zarezerwuj" class="btn btn-primary" />
                     </div>
                  </form>
               </div>
            </div>

         </div>
      </div>
   </main>
</body>

<head> 
    <link rel="stylesheet" href="~/css/customer.css" asp-append-version="true"/>
</head>
<body>
  <footer class="mastfoot mt-auto"></footer>
</body>

